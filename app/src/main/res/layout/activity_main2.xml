<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
<TextView
    android:layout_width="wrap_content"
    android:text="regstratsiya"

    android:layout_marginTop="60dp"
    android:layout_gravity="center"
    android:textSize="35dp"
   android:textStyle="italic"
    android:layout_height="wrap_content"/>
  <EditText
      android:layout_marginTop="30dp"
      android:layout_width="350dp"
      android:hint="ism"
      android:padding="10dp"
      android:background="@drawable/dizayin"
      android:layout_gravity="center_horizontal"
      android:layout_height="50dp"/>
    <EditText
        android:layout_width="350dp"
        android:background="@drawable/dizayin"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:hint="Familya"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:hint="tel raqam"
        android:background="@drawable/dizayin"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"/>
<Button
    android:id="@+id/sms"
    android:layout_width="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:text="sms yuborish"
    android:layout_height="50dp"/>
  <com.chaos.view.PinView
      android:id="@+id/PnidWiev"
      android:inputType="number"
      style="@style/PinWidget.PinView"
      android:layout_width="match_parent"
      android:layout_marginTop="40dp"
      android:layout_marginLeft="80dp"
      android:layout_height="wrap_content"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="30dp"
      android:text="Registratsiyadan mofaqiyatli otdinggiz"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_height="wrap_content"/>
<Button
    android:text="next"
    android:id="@+id/next"
    android:layout_width="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="70dp"
    android:layout_height="50dp"/>
</LinearLayout>